#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=John-3-God-So-Loved-The-World
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2014
COMPOSER="Matt McCullough"
ALBUM="The Gospel Of John"
GENRE=Sermon
COMMENT="To fully appreciate the beauty in this iconic description of God's love, we've got to understand who it is God loves and what his love costs him.  And then we've got to face the choice this text poses for each of us: what will you do with Jesus?"

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
