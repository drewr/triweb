#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=1-Cor-15-Because-Christ-Is-Risen
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2013
COMPOSER="Matt McCullough"
ALBUM="1 Corinthians: The Cross-Centered Community"
GENRE=Sermon
COMMENT="Jesus does more than remove the threat of death. He promises to give us bodies that won't die through which we'll know joy that is endless and complete. With this promise before us, there is nothing in this life we can't do without for the sake of his kingdom."

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
