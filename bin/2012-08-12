#!/usr/bin/env zsh

DATE=$(basename $0)
MP3NUM=DR000127
FNAME=Heb-10-Draw-Near

SRC=/Users/aar/Documents/Personal/Trinity/audio/_SOURCES/$DATE/$MP3NUM.mp3
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2012
COMPOSER="Matt McCullough"
ALBUM="Book of Hebrews"
GENRE=Sermon
COMMENT="The truth about Jesus explained so carefully earlier in the letter is brought home here with one simple command: draw near to God. But because drawing near to God is easier spoken of than acted on, this passage helps us identify why we struggle to approach God and what we can do about it."

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
