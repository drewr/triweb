#!/usr/bin/env zsh

DATE=$(basename $0)
WHERE=$1
MP3NUM=DR000162
FNAME=Is-9-Perfect-Permanent-King
SRC=$WHERE/$MP3NUM.mp3
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2013
COMPOSER="Matt McCullough"
ALBUM="The Gospel According To Isaiah"
GENRE=Sermon
COMMENT="Isaiah offers some of the Bible's most beautiful descriptions of God's plan to save sinners and heal the brokenness of the world. According to Isaiah 9, those plans center on the coming of a perfect and permanent King."

export WHERE SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
