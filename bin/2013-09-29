#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=1-Cor-10-Careful-What-You-Crave
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2013
COMPOSER="Matt McCullough"
ALBUM="1 Corinthians: The Cross-Centered Community"
GENRE=Sermon
COMMENT="Paul points to the example of Israel to show that receiving great blessing from God doesn't mean you won't crave something more and fall into idolatry. Because comfort in Christian trappings isn't the same as faith in Christ, be careful what you crave."

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
