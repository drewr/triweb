#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=1-Cor-7-Singleness-Marriage-Hope
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2013
COMPOSER="Matt McCullough"
ALBUM="1 Corinthians: The Cross-Centered Community"
GENRE=Sermon
COMMENT="All of us have a idea of what we hope to get out of our lives before we die. And all of us have a future beyond the grave promised to us by God if we trust in Jesus. The question is this: To which unrealized future does your heart belong?"

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
