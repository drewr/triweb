#!/usr/bin/env zsh

DATE=$(basename $0)
WHERE=$1
MP3NUM=DR000163
FNAME=Is-42-The-Servant
SRC=$WHERE/$MP3NUM.mp3
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2013
COMPOSER="Matt McCullough"
ALBUM="The Gospel According To Isaiah"
GENRE=Sermon
COMMENT="To his emphasis on the coming King, Isaiah adds an unexpected description of the one who will come to save God's people and bring justice to the nations. The conquering King is also the Servant; he is humble, gentle, and longsuffering."

export WHERE SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
