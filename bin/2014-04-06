#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=John-4-True-Faith
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2014
COMPOSER="Matt McCullough"
ALBUM="The Gospel Of John"
GENRE=Sermon
COMMENT="We must avoid faith based merely on what we see and aimed merely at the lives we want.  Instead, we must seek faith based primarily on what we hear--on Jesus's Word--and aimed at the life Jesus promises us."

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
