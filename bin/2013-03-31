#!/usr/bin/env zsh

DATE=$(basename $0)
WHERE=$1
MP3NUM=DR000165
FNAME=Is-53-The-Servant-Shall-Be-Exalted
SRC=$WHERE/$MP3NUM.mp3
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2013
COMPOSER="Matt McCullough"
ALBUM="The Gospel According To Isaiah"
GENRE=Sermon
COMMENT="The resurrection proves Jesus's death fully accounted for sin and opened up a new world of hope."

export WHERE SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
