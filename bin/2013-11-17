#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=1-Cor-15-Christ-Is-Risen
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2013
COMPOSER="Matt McCullough"
ALBUM="1 Corinthians: The Cross-Centered Community"
GENRE=Sermon
COMMENT="For Paul, Christianity stands or falls on whether Jesus is alive. But why? Only a living Jesus can truly free us from guilt in life and fear in death. And only a living Jesus makes the Christian life anything less than pitiful."

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
