#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=John-11-Death-Resurrection-Glory-Jesus
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2014
COMPOSER="Matt McCullough"
ALBUM="The Gospel Of John"
GENRE=Sermon
COMMENT="If we want to understand the full significance of Jesus and what he came to do for us, we have to look squarely at the awful reality of death.  It's in the context of this most basic human problem that the glory of Jesus shines most brightly."

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
