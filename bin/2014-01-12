#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=John-20-Why-Believe-Introducing-Johns-Gospel
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2014
COMPOSER="Matt McCullough"
ALBUM="The Gospel Of John"
GENRE=Sermon
COMMENT="John wrote this book to persuade readers that Jesus is the only one who can give us the life we're made for.  And though he originally aimed at first-century Jewish readers, John's Gospel is for all of us because all of us need to trust Jesus more than we do."

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
