#!/usr/bin/env zsh

SRC=$1
DATE=$(basename $0)
FNAME=John-1-Come-And-See
TITLE=$DATE-$FNAME
AUTHOR="Trinity Church"
YEAR=2014
COMPOSER="Matt McCullough"
ALBUM="The Gospel Of John"
GENRE=Sermon
COMMENT="The best way to evaluate whether Jesus is the Messiah is to experience him as a person or, in Jesus' words, to come and see.  But when you experience Jesus you see, as did his first disciples, that he knows you already and has the power to make you new."

export SRC TITLE AUTHOR YEAR COMPOSER ALBUM GENRE COMMENT

./encode
